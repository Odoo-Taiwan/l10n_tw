            }),
            (0,0, {
                'factor_percent': 100,
                'repartition_type': 'tax',
                'account_id': ref('tax_paid'),
            }),
        ]"/>
    </record>
 <record id="purchase_tax_template_price_include" model="account.tax.template">
        <field name="chart_template_id" ref="tw_chart_template"/>
        <field name="name">進項5%-內含</field>
